#!/usr/bin/env python3

from sys import argv
from os import rename

def reduce_underscores(s):
    res = s.replace("__", "_")
    if res.find("__") > -1:
        return reduce_underscores(res)
    else: 
        return res

for arg in argv[1:]:
    res = reduce_underscores(arg
        .lower()
        .replace(" ", "_")
        .replace("-", "_")
        .replace("ä", "ae")
        .replace("ü", "ue")
        .replace("ö", "oe")
    )
    rename(arg, res)